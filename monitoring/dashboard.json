{
    "metrics": {
        "cpu": {
            "threshold": 90,
            "alert": true,
            "description": "CPU usage percentage"
        },
        "memory": {
            "threshold": 90,
            "alert": true,
            "description": "Memory usage percentage"
        },
        "disk": {
            "threshold": 90,
            "alert": true,
            "description": "Disk usage percentage"
        },
        "requests": {
            "threshold": 1000,
            "alert": true,
            "description": "Number of requests per minute"
        },
        "db_connections": {
            "threshold": 50,
            "alert": true,
            "description": "Number of active database connections"
        },
        "response_time": {
            "threshold": 2.0,
            "alert": true,
            "description": "Average response time in seconds"
        },
        "error_rate": {
            "threshold": 5,
            "alert": true,
            "description": "Percentage of failed requests"
        },
        "backup_status": {
            "threshold": 1,
            "alert": true,
             "description": "Status of the last backup (0=failed, 1=success)"
        },
        "security_events": {
            "threshold": 0,
            "alert": true,
            "description": "Number of security-related events"
        },
        "active_users": {
            "threshold": 100,
            "alert": true,
            "description": "Number of active users"
        },
        "api_usage": {
            "threshold": 1000,
            "alert": true,
            "description": "Number of API calls per minute"
        },
        "bot_activity": {
            "threshold": 10,
            "alert": true,
            "description": "Number of bot activities per minute"
        },
        "stipend_updates": {
            "threshold": 100,
            "alert": true,
            "description": "Number of stipend updates per minute"
        },
        "test_coverage": {
            "threshold": 80,
            "alert": true,
            "description": "Current test coverage percentage"
        },
        "failed_tests": {
            "threshold": 0,
            "alert": true,
            "description": "Number of failed tests"
        },
        "pending_updates": {
            "threshold": 0,
            "alert": true,
            "description": "Number of pending system updates"
        },
        "security_audit": {
            "threshold": 0,
            "alert": true,
            "description": "Status of the last security audit (0=failed, 1=success)"
        }
    }
}
