### CODE START ###
# Create new branch for version management improvements
/run git checkout -b feature/version-management

# Fix path handling and run start_cycle
/run python scripts/start_cycle.py

# Verify database connection with enhanced logging
/run python -c "from scripts.version import validate_db_connection; import logging; logging.basicConfig(level=logging.DEBUG, format='%(asctime)s - %(levelname)s - %(message)s'); import os; db_uri = os.getenv('SQLALCHEMY_DATABASE_URI').replace('sqlite:///', ''); assert validate_db_connection(db_uri); print('Database connection validation passed')"

# Deploy to render.com
/run python scripts/deploy_to_render.py
### CODE END ###

# After running any console commands we go to STEP_2
/load scripts/STEP_2
