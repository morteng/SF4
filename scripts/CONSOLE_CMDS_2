### CODE START ###
# Create database backup
/run python -c "from scripts.version import create_db_backup; create_db_backup('instance/stipend.db')"

# Run version management tests
/run pytest tests/version_management/ -v

# Check production environment validation
/run python -c "from scripts.version import validate_production_environment; print(f'Production environment valid: {validate_production_environment()}')"

# Bump version and commit changes
/run python -c "from scripts.version import bump_version, update_version_file, push_to_github; new_version = bump_version('minor'); update_version_file(new_version); push_to_github('feature/version-management', f'Version management improvements - v{new_version}')"

# Check test coverage
/run pytest --cov=scripts.version --cov-report=term-missing

# Check Git status
/run git status
### CODE END ###

# Print the current datetime to console
/run scripts/print_datetime.py
/run Write-Host "Code Cycle Step 2 Ends"

