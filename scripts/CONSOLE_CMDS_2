### CODE START ###
# Test database connection with retry logic
/run python -c "import logging; logging.basicConfig(level=logging.DEBUG); from scripts.version import validate_db_connection; print(f'Database connection: {validate_db_connection("instance/stipend.db")}')"

# Initialize database schema
/run python -c "from app import create_app; app = create_app(); from app.extensions import db; with app.app_context(): db.create_all(); print('Database schema created successfully')"

# Run basic database tests
/run pytest tests/test_database.py -v

# Check test coverage
/run pytest --cov=app --cov-report=term-missing

# Verify version management
/run python -c "from scripts.version import validate_version; assert validate_version('1.0.0'); print('Version validation passed')"

# Check Git status
/run git status
### CODE END ###

# Print the current datetime to console
/run scripts/print_datetime.py
/run Write-Host "Code Cycle Step 2 Ends"

# After running any console commands, go to STEP_3
/load scripts/STEP_3
