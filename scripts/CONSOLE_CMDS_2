### CODE START ###
# Initialize core systems
/run scripts/path_config.py
/run scripts/init_logging.py

# Verify git state is clean
/run scripts/verification/verify_git_state.py --pull --retry=3 --auto-resolve

# Initialize database with schema validation
/run scripts/startup/init_db.py --validate-schema --check-migrations

# Verify security settings
/run scripts/verification/verify_security.py --check-env --validate-keys

# Verify database connection
/run scripts/verification/verify_db_connection.py --retry=3 --timeout=10

# Verify Render deployment readiness
/run scripts/verification/verify_render_ready.py --check-api --validate-vars

# Initialize admin user
/run scripts/startup/init_admin.py --verify-email

# Commit pending changes with deployment message
/run scripts/commit_changes.py --message "Pre-deployment verification completed"

### CODE END ###

