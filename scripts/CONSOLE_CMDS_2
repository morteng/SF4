# Console Commands for Step 2
# Do not use echo commands
# Only edit the section between CODE START and CODE END

### CODE START ###
# Install core dependencies
/run pip install flask werkzeug pytest pytest-cov

# Verify installation
/run pip show flask werkzeug pytest

# Initialize Flask application
/run flask --app app init

# Initialize database migrations
/run flask db init

# Create initial migration
/run flask db migrate -m "Initial migration"

# Apply migrations
/run flask db upgrade

# Verify database setup
/run flask db current

# Run initial tests
/run pytest tests/ --cov=app --cov-report=term-missing
### CODE END ###

# Print the current datetime to console
/run scripts/print_datetime.py
/run Write-Host "Code Cycle Step 2 Start"
/run scripts/print_datetime.py
/run Write-Host "Code Cycle Step 2 Ends"

# After running any console commands, go to STEP_3
/load scripts/STEP_3
