/run scripts/verify_db_config.py --validate-uri --check-permissions
/run scripts/verify_db_connection.py --retry=3 --timeout=10 --validate-schema

# Initialize database with schema validation
/run scripts/startup/init_db.py --validate-schema --check-migrations --backup-first

# Run critical test coverage checks
/run scripts/verify_test_coverage.py --min-coverage=80 --critical-modules=app/models:90,app/services:90,app/security:95

# Prepare Render deployment
/run scripts/verify_render_ready.py --check-api --validate-vars --test-deploy

# Generate final documentation
/run scripts/finalize_docs.py --strict --validate

# Generate deployment checklist
/run scripts/generate_deployment_checklist.py --validate --strict

# Request final approval
/run scripts/request_approval.py --final --validate

# Final verification
/run scripts/verify_tests.py --final --validate-all
/run scripts/verify_deployment.py --test --check-security --check-render

