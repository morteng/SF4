/run scripts/create_backup.py --timestamped
/run scripts/verify_backup.py

# Archive and verify logs
/run scripts/archive_logs.py --force
/run scripts/verify_logs.py

# Finalize documentation
/run scripts/finalize_docs.py
/run scripts/generate_deployment_checklist.py

# Verify deployment readiness
/run scripts/verify_deployment.py --full --validate-admin

# Deploy to production
/run scripts/deploy_to_render.py

# Final cleanup and cycle end
/run scripts/final_cleanup.py
/run scripts/end_cycle.py

# Push changes to GitHub
/run git push origin main

### CODE END ###

# Go to final cleanup
/load scripts/FINAL_CLEANUP
