# Console Commands for Step 5 - Document, Demo and Deploy
# Only edit the section between CODE START and CODE END

### CODE START ###
# Initialize core systems
/run scripts/path_config.py
/run scripts/init_logging.py

# Verify environment state with auto-resolve
/run scripts/verify_git_state.py --auto-resolve
/run scripts/verify_db_config.py --strict
/run scripts/verify_db_connection.py --retry=3

# Initialize test database and admin
/run scripts/startup/init_db.py --validate-schema --test
/run scripts/startup/init_admin.py --verify-email --check-password --test

# Run all test suites with coverage
/run scripts/run_tests.py --unit --coverage
/run scripts/run_tests.py --integration --coverage
/run scripts/run_tests.py --e2e --coverage

# Generate and verify coverage
/run scripts/generate_coverage_report.py --html --xml
/run scripts/verify_test_coverage.py --min-coverage=80 --critical-modules

# Finalize documentation
/run scripts/finalize_docs.py --strict
/run scripts/generate_deployment_checklist.py --validate

# Verify deployment readiness
/run scripts/verify_deployment.py --test
/run scripts/verify_render_ready.py --strict

# Request approval
/run scripts/request_approval.py --final

# Final verification
/run scripts/verify_tests.py --final
/run scripts/verify_review.py --strict
/run scripts/verify_test_cleanup.py --strict

# Deploy if ready
/run scripts/deploy_to_render.py --auto-resolve

# Push to GitHub
/run git push origin main

### CODE END ###

# Proceed to Final Cleanup
/load scripts/FINAL_CLEANUP
